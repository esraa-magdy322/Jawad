<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_tax_report_wizard_form" model="ir.ui.view">
        <field name="name">tax.report.wizard.form</field>
        <field name="model">tax.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Export Tax Report">
                <group invisible="state == 'done'">
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <group>
                        <field name="company_id"/>
                    </group>
                </group>
                <group invisible="state == 'draft'">
                    <field name="excel_file" filename="excel_filename"/>
                    <field name="excel_filename" invisible="1"/>
                </group>
                <field name="state" invisible="1"/>
                <footer>
                    <button name="action_export_excel" string="Export Excel" type="object" class="btn-primary" invisible="state == 'done'"/>
                    <button string="Close" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_tax_report_wizard" model="ir.actions.act_window">
        <field name="name">Export Tax Report</field>
        <field name="res_model">tax.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
