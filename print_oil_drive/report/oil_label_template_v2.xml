<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="minimal_layout_oil_label">
    <div class="article" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id">
      <t t-raw="0"/>
    </div>
  </template>

  <template id="report_oil_label_template">
    <t t-call="web.html_container">
      <t t-foreach="docs" t-as="o">
        <t t-call="print_oil_drive.minimal_layout_oil_label">
<div class="page" style="width: 100mm; height: 70mm; padding: 8px; font-family: Arial, sans-serif; box-sizing: border-box;">

    <!-- اللوجو -->
    <div style="text-align: center; margin-bottom: 6px;">
        <img t-att-src="'/print_oil_drive/static/src/img/logo.png'"
             style="width: 40mm; height: 13mm; object-fit: contain;" />
    </div>

    <!-- العنوان -->
    <div style="text-align: center; margin-bottom: 10px;">
        <span style="font-weight: bold; font-size: 16px; display: block;">
            موعد تغيير الزيت القادم
        </span>
    </div>

    <!-- جدول البيانات -->
    <table style="
        width: 100%;
        border-collapse: collapse;
        text-align: right;
        direction: rtl;
        font-size: 14px;
        margin: 0 auto;
    ">

        <tr>
            <td style="border: 1.5px solid #000; padding: 6px 8px; width: 50%; font-weight: 500;">نوع السيارة :</td>
            <td style="border: 1.5px solid #000; padding: 6px 8px; width: 50%;">
                <span t-esc="o.car_type"/>
            </td>
        </tr>

        <tr>
            <td style="border: 1.5px solid #000; padding: 6px 8px; font-weight: 500;">الموديل :</td>
            <td style="border: 1.5px solid #000; padding: 6px 8px;">
                <span t-esc="o.car_model"/>
            </td>
        </tr>

        <tr>
            <td style="border: 1.5px solid #000; padding: 6px 8px; font-weight: 500;">رقم اللوحة :</td>
            <td style="border: 1.5px solid #000; padding: 6px 8px;">
                <span t-esc="o.plate_number"/>
            </td>
        </tr>

        <tr>
            <td style="border: 1.5px solid #000; padding: 6px 8px; font-weight: 500;">الممشى الحالي :</td>
            <td style="border: 1.5px solid #000; padding: 6px 8px;">
                <span t-esc="o.track"/>
            </td>
        </tr>

        <tr>
            <td style="border: 1.5px solid #000; padding: 6px 8px; font-weight: 500;">الممشى القادم :</td>
            <td style="border: 1.5px solid #000; padding: 6px 8px;">
                <span t-esc="o.next_track"/>
            </td>
        </tr>

        <!-- لو عايزة تفعلي نوع الزيت شيلي التعليق -->
        <!--
        <tr>
            <td style="border: 1.5px solid #000; padding: 6px 8px; font-weight: 500;">نوع الزيت :</td>
            <td style="border: 1.5px solid #000; padding: 6px 8px;">
                <span t-esc="o.oil_type"/>
            </td>
        </tr>
        -->

    </table>
</div>

        </t>
      </t>
    </t>
  </template>
</odoo>