<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="minimal_layout_oil_label">
    <div class="article" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id">
      <t t-raw="0"/>
    </div>
  </template>

  <template id="report_oil_label_template">
    <t t-call="web.html_container">
      <t t-foreach="docs" t-as="o">
        <t t-call="print_oil_drive.minimal_layout_oil_label">
<div class="page" style="width: 100mm; height: 70mm; padding: 6px; font-size: 13px; font-family: Arial;">

    <!-- اللوجو -->
    <div style="text-align:center; margin-bottom:4px;">
        <img t-att-src="'/print_oil_drive/static/src/img/logo.png'"
             style="width: 38mm; height:12mm; object-fit:contain;" />
    </div>

    <!-- العنوان -->
    <div style="text-align:center; margin-bottom:8px;">
        <span style="font-weight:bold; font-size:15px;">
            موعد تغيير الزيت القادم
        </span>
    </div>

    <!-- جدول البيانات -->
    <table style="
        width:100%;
        border-collapse: collapse;
        text-align: right;
        direction: rtl;
        font-size: 13px;
    ">

        <tr style="height:22px;">
            <td style="border:1px solid black; width:48%;">نوع السيارة :</td>
            <td style="border:1px solid black;">
                <span t-esc="o.car_type"/>
            </td>
        </tr>

        <tr style="height:22px;">
            <td style="border:1px solid black;">الموديل :</td>
            <td style="border:1px solid black;">
                <span t-esc="o.car_model"/>
            </td>
        </tr>

        <tr style="height:22px;">
            <td style="border:1px solid black;">رقم اللوحة :</td>
            <td style="border:1px solid black;">
                <span t-esc="o.plate_number"/>
            </td>
        </tr>

        <tr style="height:22px;">
            <td style="border:1px solid black;">الممشى الحالي :</td>
            <td style="border:1px solid black;">
                <span t-esc="o.track"/>
            </td>
        </tr>

        <tr style="height:22px;">
            <td style="border:1px solid black;">الممشى القادم :</td>
            <td style="border:1px solid black;">
                <span t-esc="o.next_track"/>
            </td>
        </tr>

<!--        <tr style="height:22px;">-->
<!--            <td style="border:1px solid black;">نوع الزيت :</td>-->
<!--            <td style="border:1px solid black;">-->
<!--                <span t-esc="o.oil_type"/>-->
<!--            </td>-->
<!--        </tr>-->

    </table>
</div>

        </t>
      </t>
    </t>
  </template>
</odoo>
