        <record id="config_parameter_oil_whatsapp_enabled" model="ir.config_parameter">
            <field name="key">pos_oil_whatsapp.enabled</field>
            <field name="value">True</field>
        </record>
        
        <record id="config_parameter_oil_whatsapp_instance_id" model="ir.config_parameter">
            <field name="key">pos_oil_whatsapp.instance_id</field>
            <field name="value"></field>
        </record>
        
