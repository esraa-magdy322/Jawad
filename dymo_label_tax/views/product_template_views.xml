<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Add Print Tax Label button to product template form view -->
        <record id="product_template_form_view_dymo_tax" model="ir.ui.view">
            <field name="name">product.template.form.dymo.tax</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_open_label_layout']" position="after">
                    <button name="action_print_dymo_tax_label" 
                            type="object" 
                            string="Print Tax Label"
                            class="btn-secondary"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
